<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cd_blue</item>
        <item name="colorPrimaryDark">@color/cd_blue_dark</item>
        <item name="colorAccent">@color/cd_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/NavDrawerArrow</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="popupTheme">@style/Toolbar_Popup</item>
    </style>

    <style name="NavDrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleText</item>
        <item name="android:textColorPrimaryInverse">#ffffff</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">@color/cd_blue</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:background">@color/cd_blue_dark</item>
    </style>
</resources>
